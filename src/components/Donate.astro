---
import DonatePaypal from './DonatePaypal.astro'
// import DonateCoffee from './components/DonateCoffee.astro'
// import DonatePatreon from './components/DonatePatreon.astro'
---
<div class="donate">
  <DonatePaypal />
  {/* <DonateCoffee />
  <DonatePatreon /> */}
</div>

<style>
  .donate { display: flex; justify-content: center; align-items: center; flex-wrap: wrap; }
  .donate > * { flex: 0 1 auto; margin: 0 0.5rem 0.5rem; }
/* Buy Me a Coffee  */
.bmc-button {
  padding: 0.5rem; line-height: 35px; text-decoration: none; display:inline-flex; color: #ffffff; background-color: #FF813F; border-radius: 5px; border: 1px solid transparent; font-size: 20px; letter-spacing:0.6px; box-shadow: 0px 1px 2px rgba(190, 190, 190, 0.5); font-family:'Norican', 'Arial', cursive; box-sizing: border-box; transition: 0.3s all linear;
  span { margin: 0 0.5rem; font-size: 1.3rem; }
}
.bmc-button  img { height: 34px; width: 35px; margin-bottom: 1px; box-shadow: none; border: none; vertical-align: middle; }
.bmc-button:hover, .bmc-button:active, .bmc-button:focus { text-decoration: none; box-shadow: 0px 1px 2px 2px rgba(190, 190, 190, 0.5); opacity: 0.85; color:#ffffff; }

/* Patreon */
 {
  color: white;
  align-items: center;
  background-color: rgb(232, 91, 70);
  box-sizing: border-box;
  cursor: pointer;
  display: inline-flex;
  font-weight: 500;
  height: unset;
  justify-content: center;
  align-items: center;
  pointer-events: unset;
  text-align: center;
  text-transform: none;
  user-select: none;
  white-space: unset;
  font-size: 0.875rem !important;
  border-radius: 9999px;
  border: 1px solid rgb(232, 91, 70);
  padding: 0.46875rem 1rem;
  text-decoration: none;
  transition: all 300ms cubic-bezier(0.19, 1, 0.22, 1) 0s;
}

.patreon-button:hover { background-color: rgb(231, 81, 59); }

.patreon-button svg { height: 1rem; width: 1rem; margin-right: 0.5rem; }
</style>